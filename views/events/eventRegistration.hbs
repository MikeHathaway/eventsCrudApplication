<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <section>
      <form action="/events/{{event.id}}/register" method="POST">
        <label for="preferred_name">Preferred Name</label>
        <input id="preferred_name" class="form-control" type="text" name="preferred_name" required>

        <label for="last_name">Last Name</label>
        <input id="last_name" class="form-control" type="text" name="last_name" required>

        <label for="birthday">Birthday</label>
        <input id="birthday" class="form-control" type="date" name="birthday" required>

        <label for="email">Email</label>
        <input id="email" class="form-control" type="text" name="email" required>

        <label for="tickets">Tickets</label>
        <select id="tickets" name="id">
          {{#each tickets}}
            <option value="{{this.id}}">{{this.name}}: ${{this.price}}</option>
          {{/each}}
        </select>
        <button type="submit" class="btn btn-default">Register</button>
      </form>
    </section>
      {{#if error}}
        <section>
          <p>{{error}}</p>
        </section>
      {{/if}}
  </body>
</html>
